        <div class="carousel-item rounded-4 slide carousel-fade">
            <img src="~/images/Eurovacation.jpg" alt="European Vacation" class="d-block w-100 carousel-image">
            @*<div class="carousel-caption d-none d-md-block">
                <div class="bg-dark p-3">
