<!-- CSS Styling -->
<style>
    .carousel-image {
        height: 700px;
        object-fit: cover;
    }

    .carousel-item:hover .card {
        transform: translateY(-50%);
        opacity: 1;
    }

    .carousel-item .card {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        opacity: 0;
        transition: all .3s linear;
        z-index: 1;
        bottom: 0;
        left: 0;
        right: 0;
        height: 100%;
    }

    .carousel-item {
        height: 700px;
        overflow: hidden;
        position: relative;
        transition: transform 1s ease-in-out;
    }


    /* Change the color of the carousel controls */
    .carousel-control-prev-icon,
    .carousel-control-next-icon {
        background-color: black; /* Change the background color */
        color: white; /* Change the color of the icon */
    }

    /* Change the color of the carousel control buttons on hover */
    .carousel-control-prev:hover,
    .carousel-control-next:hover {
        background-color: transparent; /* Change the background color */
        color: white; /* Change the color of the icon */
    }

    /* Change the color of the carousel control buttons when they're active */
    .carousel-control-prev:focus,
    .carousel-control-next:focus,
    .carousel-control-prev:active,
    .carousel-control-next:active {
        background-color: transparent; /* Change the background color */
        color: white; /* Change the color of the icon */
    }

    </style>




