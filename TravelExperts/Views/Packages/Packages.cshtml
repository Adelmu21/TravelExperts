<body class="bg-dark">
<!-- Carousel -->
<div id="demo" class="carousel slide carousel-fade" data-ride="carousel" style="margin-top: 2rem;">

    <!-- Indicators/dots -->
    <ul class="carousel-indicators">
        <li data-target="#demo" data-slide-to="0" class="active"></li>
        <li data-target="#demo" data-slide-to="1"></li>
        <li data-target="#demo" data-slide-to="2"></li>
        <li data-target="#demo" data-slide-to="3"></li>
    </ul>

    <!-- The slideshow/carousel -->
    <div class="carousel-inner" style="height: 700px;">
        <div class="carousel-item active rounded-4 slide carousel-fade">
            <img src="~/images/CaribbeanCruise.jpg" alt="Caribbean New Year" class="d-block w-100 carousel-image">
            <@*div class="carousel-caption">
                <h3 class="text-dark">Caribbean New Year</h3>
            </div>*@
            <div class="position-absolute bottom-0 w-100">
                <div class="bg-dark p-3 opacity-75">
                    <h5 class="text-center text-white">Caribbean New Year</h5>
                </div>
            </div>
            <div class="card  px-5">
                <img class="card-img-top mx-auto" src="~/images/CaribbeanCruise.jpg" alt="Card image cap" style="height: 200px; width: 500px; ">
                <h4 class="text-center">Caribbean New Year</h4>
                <p>
                    Sail into the New Year in style with our Caribbean cruise! Bask in the warm sun,
                    explore vibrant ports, indulge in delicious cuisine, and celebrate the arrival of the New Year with exclusive onboard festivities.
                    This is the ultimate escape from the winter blues – book now for the adventure of a lifetime.
                </p>
                <div class="text-left" style="padding-left: 7rem">
                @foreach (var package in Model.Where(p => p.PkgName == "Caribbean New Year"))
                {
                    <p>Description: @package.PkgDesc</p>
                    @*<p>Start Date: @package.PkgStartDate?.ToString("yyyy-MM-dd")</p>*@
                    <p>Pricing: @(package.PkgBasePrice.ToString("c")) + Applicable fees</p>
                }
                </div>
                <div class="text-center">
                <a asp-controller="Bookings" asp-action="Index" class="btn btn-outline-info">Book Now</a>
                </div>
            </div>
        </div>
